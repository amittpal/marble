
@{
    ViewBag.Title = "login";
    Layout = "~/Views/Shared/MasterLayout.cshtml";
}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link href="~/Content/css/login.css" rel="stylesheet" />
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<h2 class="text-danger text-center" style="margin-top:120px"><u>@ViewBag.msg</u></h2>
<div class="container-fluid pb-5" style="margin-top:-80px">    
    <div id="login-row" class="row justify-content-center align-items-center">
        <div id="login-column" class="col-md-6">
            <div class="box">
                <div class="shape1"></div>
                <div class="shape2"></div>
                <div class="shape3"></div>
                <div class="shape4"></div>
                <div class="shape5"></div>
                <div class="shape6"></div>
                <div class="shape7"></div>
                <div class="float">
                    @using (@Html.BeginForm("login", "Home", FormMethod.Post,new { @class="form"}))
                    {
                        <div class="form-group">
                            <label for="username" class="text-white">Username:</label><br>
                            @Html.TextBox("id", null, new { @class = "form-control", id = "username", placeholder = "Enter Your Login-ID", required = "required", type = "text" })
                        </div>
                        <div class="form-group">
                            <label for="password" class="text-white">Password:</label><br>
                            @Html.TextBox("password", null, new { @class = "form-control", id = "password", placeholder = "Enter Your Password", required = "required", type = "password" })
                        </div>
                        <div class="form-group text-center">
                            @Html.TextBox("button", "Sign-In", new { @class = "btn btn-warning btn-md", type = "submit" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

