
@{
    ViewBag.Title = "contactus";
    Layout = "~/Views/Shared/MasterLayout.cshtml";
}
<link href="~/Content/css/contactus.css" rel="stylesheet" />
<section id="contact" style="margin-top:150px;">
    <div class="container">
        <div class="well well-md">
            <h3><strong>Contact Us</strong></h3>
            <h3><strong>@ViewBag.msg</strong></h3>
        </div>

        <div class="row">
            <div class="col-md-7 bg-warning">
                <div style="width: 100%"><iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3540.861304885689!2d82.8723572144282!3d27.442432843692234!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x7c47d2e6157d35ae!2sSHREE+GANESH+MARBLE+%26+TILES!5e0!3m2!1sen!2sin!4v1533123420992" width="645" height="450" frameborder="0" style="border:0" allowfullscreen></iframe></div>
            </div>
            <div class="col-md-5">
                <h4><strong>Get in Touch</strong></h4>
                @using (@Html.BeginForm("contactus", "Home", FormMethod.Post ))
                {
                    <div class="form-group">
                        @Html.TextBox("name", null, new { @class = "form-control", type = "text", placeholder = "Name", required = "required" })
                    </div>
                    <div class="form-group">
                        @Html.TextBox("email", null, new { @class = "form-control", type = "email", placeholder = "E-Mail", required = "required" })
                    </div>
                    <div class="form-group">
                        @Html.TextBox("mobile", null, new { @class = "form-control", pattern = "[7-9]{1}[0-9]{9}", type = "text", placeholder = "Phone", required = "required" })
                    </div>
                    <div class="form-group">
                        @Html.TextArea("message", null, new { @class = "form-control", rows = "5", placeholder = "Message", style = "resize:none", required = "required" })
                    </div>
                    @Html.TextBox("button", "Submit", new { @class = "btn-block btn-warning fa fa-paper-plane-o", type = "submit", style = "cursor:pointer"})
                    }
                </div>
            </div>
        </div>
    </section>

