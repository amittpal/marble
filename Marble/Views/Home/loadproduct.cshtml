@using Marble.Models;
@{
    ViewBag.Title = "loadproduct";
    Layout = "~/Views/Shared/MasterLayout.cshtml";
}

<link href="~/Content/css/loadproduct.css" rel="stylesheet" />


<div class="container" style="margin-top:130px;">
    <div class="card">
        <div class="container-fliud">
            <div class="wrapper row">


                @{
                    tbl_pic list = (tbl_pic)ViewData["prodpic"];
                    tbl_products list1 = (tbl_products)ViewData["proddetail"];
                    if (list != null && list1 != null)
                    {
                        <div class="preview col-md-6">
                            <div class="preview-pic tab-content">
                                <div class="tab-pane active" id="pic-1"><img src="~/Content/productimg/@list.pic1" /></div>
                                <div class="tab-pane" id="pic-2"><img src="~/Content/productimg/@list.pic2" /></div>
                                <div class="tab-pane" id="pic-3"><img src="~/Content/productimg/@list.pic3" /></div>
                                <div class="tab-pane" id="pic-4"><img src="~/Content/productimg/@list.pic4" /></div>
                            </div>
                            <ul class="preview-thumbnail nav nav-tabs">
                                <li class="active"><a data-target="#pic-1" data-toggle="tab"><img src="~/Content/productimg/@list.pic1" /></a></li>
                                <li><a data-target="#pic-2" data-toggle="tab"><img src="~/Content/productimg/@list.pic2" /></a></li>
                                <li><a data-target="#pic-3" data-toggle="tab"><img src="~/Content/productimg/@list.pic3" /></a></li>
                                <li><a data-target="#pic-4" data-toggle="tab"><img src="~/Content/productimg/@list.pic4" /></a></li>
                            </ul>

                        </div>
                        <div class="details col-md-6">
                            <h3 class="product-title">@list1.name</h3>
                            <div class="rating">
                                <div class="stars">
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star checked"></span>
                                    <span class="fa fa-star"></span>
                                    <span class="fa fa-star"></span>
                                </div>
                                <span class="review-no">41 reviews</span>
                            </div>
                            <p class="product-description">@list1.subcategory</p>
                            <p class="product-description"><strong>@list1.quantity</strong> are left only</p>
                            @*<h4 class="price">current price: <span>Not Available</span></h4>*@
                            <p class="vote"><strong>91%</strong> of buyers enjoyed this product! <strong>(87 votes)</strong></p>
                            <h5 class="sizes">
                                sizes:
                                <span class="size" data-toggle="tooltip" title="small">s</span>
                                <span class="size" data-toggle="tooltip" title="medium">m</span>
                                <span class="size" data-toggle="tooltip" title="large">l</span>
                                <span class="size" data-toggle="tooltip" title="xtra large">xl</span>
                            </h5>
                            <h5 class="colors">
                                colors:
                                <span class="color orange not-available" data-toggle="tooltip" title="Not In store"></span>
                                <span class="color green"></span>
                                <span class="color blue"></span>
                            </h5>
                            <div class="action">
                                <button class="add-to-cart btn btn-default" type="button">Request Quote</button>
                                @*<button class="like btn btn-default" type="button"><span class="fa fa-heart"></span></button>*@
                            </div>
                        </div>
                        }
                    }
                    </div>
                </div>
            </div>
        </div>
