@using Marble.Models;
@{
    ViewBag.Title = "loadproduct";
    Layout = "~/Views/Shared/AdminMaster.cshtml";
}

<link href="~/Content/fancyboxstyle/jquery.fancybox.min.css" rel="stylesheet" />
<script src="~/Content/js/jquery-3.2.0.js"></script>
<script src="~/Content/fancyboxstyle/jquery.fancybox.min.js"></script>
<style>
    .fancy {
        height: 30%;
        width: 60%;
    }

        .fancy a img {
            height: 30%;
            width: 60%;
            overflow: hidden;
            background: radial-gradient(yellow,orange,blue);
        }

    .fancy2 a img {
        margin: 3%;
        outline:none;
        border: 2px solid red;
        background: radial-gradient(blue,red,orange);
        overflow:hidden;
        height:20%;
        width:40%;
    }
</style>
<div class="container text-center" style="min-height:500px;color:white;margin-top:70px;">
    @{
        tbl_pic rec = (tbl_pic)ViewData["rec"];
        if (rec != null)
        {
            <center>
                <div class="fancy">
                    <a data-fancybox="gallery" data-width="1300" data-height="1500" href="~/Content/productimg/@rec.pic1">
                        <img src="~/Content/productimg/@rec.pic1">
                    </a>
                </div>
                <div style="height:5px;width:83%;margin:5px;background-color:black"></div>
                <div class="fancy2">
                    <a data-fancybox="gallery" data-width="1300" data-height="1500" href="~/Content/productimg/@rec.pic2">
                        <img src="~/Content/productimg/@rec.pic2">
                    </a>
                    <a data-fancybox="gallery" data-width="1300" data-height="1500" href="~/Content/productimg/@rec.pic3">
                        <img src="~/Content/productimg/@rec.pic3">
                    </a>
                    <a data-fancybox="gallery" data-width="1300" data-height="1500" href="~/Content/productimg/@rec.pic4">
                        <img src="~/Content/productimg/@rec.pic4">
                    </a>
                </div>
            </center>
        }
        else
        {
            <h2>no product</h2>
        }
    }
    <script type="text/javascript">
        $('[data-fancybox]').fancybox({
            loop: false,
            gutter: 50,
            buttons: [
                "zoom",
                "share",
                "slideShow",
                "fullScreen",
                "download",
                "thumbs",
                "close"
            ],
            idleTime: 3
        });
    </script>
</div>


